<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
        Added createdBy and notifyAllUsers columns to the watch_list_item entity.
    -->
    <changeSet id="20251222120100-1" author="jhipster">
        <addColumn tableName="watch_list_item">
            <column name="created_by_id" type="bigint">
                <constraints nullable="true" />
            </column>
        </addColumn>

        <addColumn tableName="watch_list_item">
            <column name="notify_all_users" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
